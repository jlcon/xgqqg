<?xml version="1.0" encoding="UTF-8" ?> 

<configuration scan="true" scanPeriod="60 seconds" debug="true">
    
	<property resource="spring/setting.properties" />
	<contextName>${CONTEXT_NAME}</contextName>
	
	<appender name="db-log" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/superman.db.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/superman.db.log-%d{yyyy-MM-dd}</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}---/%n-/%msg%n%n</pattern>
		</encoder>
	</appender>
	
	<appender name="superman-log" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/superman.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/superman.log-%d{yyyy-MM-dd}</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}---/%n-/%msg%n%n</pattern>
		</encoder>
	</appender>
	
	<!-- ***************************************************************** -->

	<!-- STDOUT APENDER -->

	<!-- ***************************************************************** -->

	<if condition='property("os.name").toUpperCase().contains("WINDOWS")'>
		<then>
			<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
				<encoder>
					<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}---/%n-/%msg%n%n</pattern>
				</encoder>
			</appender>
			<root level="INFO" additivity="false">
				<appender-ref ref="STDOUT" />
			</root>
			<logger name="com.montime" level="debug" additivity="false">
				<appender-ref ref="STDOUT" />
			</logger>
			<logger name="org.apache" level="warn">
				<appender-ref ref="STDOUT" />
			</logger>
			
			<logger name="org.springframework" level="info" additivity="false">
				<appender-ref ref="STDOUT" />
			</logger>
			
			<logger name="net" level="error" additivity="false">
				<appender-ref ref="STDOUT" />
			</logger>
			<logger name="org.hibernate" level="error" additivity="false">
				<appender-ref ref="STDOUT" />
			</logger>
			
			<logger name="com.alibaba" level="warn">
				<appender-ref ref="STDOUT" />
			</logger>
			<logger name="ch.qos" level="error">
				<appender-ref ref="STDOUT" />
			</logger>
		</then>
	</if>
	
	<!-- sql start 开启将INFO改为DEBUG就行-->
	<logger name="java.sql.Statement" level="INFO">
		<appender-ref ref="db-log" />
	</logger>
	<logger name="java.sql.Connection" level="INFO">
		<appender-ref ref="db-log" />
	</logger>
	<logger name="java.sql.PreparedStatement" level="INFO">
		<appender-ref ref="db-log" />
	</logger>
	<!-- sql end -->
	
	<root level="warn" additivity="false">
		<appender-ref ref="superman-log" />
	</root>
</configuration>